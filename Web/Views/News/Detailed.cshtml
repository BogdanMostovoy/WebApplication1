@using System.Globalization
@model DetailedNews

<div>@Model.PostDate.ToString("yyyy MMMM dd", new CultureInfo("ru-Ru"))</div> <br/>
<div>
    <img src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Images.First()))"
         alt="Image"
         height="60"
         width="60"
         class="mb-2 rounded-circle img-thumbnail">
</div>
<div>@Model.Title</div> <br/>
<div>@Model.Description</div> <br/>

<div>
    @foreach (var image in Model.Images.Skip(1))
    {
        <img src="data:image/jpeg;base64,@(Convert.ToBase64String(image))"
             alt="Image"
             height="60"
             width="60"
             class="mb-2 rounded-circle img-thumbnail">
    }
</div>

