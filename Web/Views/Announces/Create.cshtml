@model CreateAnnounceForm

<div class="row">
    <div class="col-sn-6">
        <form method="post" enctype="multipart/form-data" asp-action="Create">
            <div class="form-group">
                <label asp-for="Title" class="control-label">Заголовок</label>
                <input asp-for="Title" class="form-control"/>
                <span asp-validation-for="Title"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label">Описание</label>
                <textarea asp-for="Description"  class="form-control"></textarea>
                <span asp-validation-for="Description"></span>
            </div>

            <div class="form-group">
                <label asp-for="Image" class="control-label">Загрузить картинку</label>
                <input asp-for="Image" class="form-control" type="file"/>
                <span asp-validation-for="Image"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnnounceDate" class="control-label">Дата анонса</label>
                <input asp-for="AnnounceDate" class="form-control" type="date"/>
                <span asp-validation-for="AnnounceDate"></span>
            </div>

            <div class="form-group">
                <input class="btn btn-primary" type="submit" value="Save"/>
                <a class="btn btn-danger" asp-action="List"></a>
            </div>
        </form>
    </div>
</div>
    